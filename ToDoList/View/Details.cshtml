@model TaskResponseModel

@{
    ViewData["Title"] = "Task Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Task Details</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Title:</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Description:</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.IsCompleted ? "badge-success" : "badge-warning")">
                        @(Model.IsCompleted ? "Completed" : "Pending")
                    </span>
                </dd>

                <dt class="col-sm-3">Created Date:</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToString("f")</dd>

                <dt class="col-sm-3">Last Updated:</dt>
                <dd class="col-sm-9">@(Model.UpdatedDate?.ToString("f") ?? "Not updated yet")</dd>
            </dl>
        </div>
        <div class="card-footer">
            <div class="btn-group" role="group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-list"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <!-- Activity Log Section -->
    <div class="mt-4">
        <h4><i class="fas fa-history"></i> Activity Log</h4>
        <ul class="list-group">
            <li class="list-group-item">
                <i class="fas fa-plus-circle text-success"></i> 
                Created on @Model.CreatedDate.ToString("f")
            </li>
            @if (Model.UpdatedDate.HasValue)
            {
                <li class="list-group-item">
                    <i class="fas fa-sync-alt text-primary"></i> 
                    Last updated on @Model.UpdatedDate.Value.ToString("f")
                </li>
            }
        </ul>
    </div>
</div>

@section Styles {
    <style>
        dt {
            font-weight: 500;
        }
        .card {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}