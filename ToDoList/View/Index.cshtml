@model IEnumerable<TaskResponseModel>

@{
    ViewData["Title"] = "Task List";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
        </div>
    }

    <!-- Task Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Last Updated</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.Title</td>
                        <td>@(task.Description.Length > 50 ? task.Description.Substring(0, 50) + "..." : task.Description)</td>
                        <td>
                            <span class="badge @(task.IsCompleted ? "badge-success" : "badge-warning")">
                                @(task.IsCompleted ? "Completed" : "Pending")
                            </span>
                        </td>
                        <td>@task.CreatedDate.ToString("MMM dd, yyyy")</td>
                        <td>@(task.UpdatedDate?.ToString("MMM dd, yyyy") ?? "N/A")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@task.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm"
                                            onclick="return confirm('Are you sure you want to delete this task?')">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Create New Button -->
    <div class="mt-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Create New Task
        </a>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap and FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <!-- Auto-dismiss alerts after 5 seconds -->
    <script>
        $(document).ready(function() {
            setTimeout(function() {
                $(".alert").fadeOut("slow");
            }, 5000);
        });
    </script>
}